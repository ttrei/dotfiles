{
    "window.restoreWindows": "none",
    "window.title": "${rootName}${separator}${appName}",
    "workbench.colorTheme": "Gruvbox Light Hard",
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "always",
    "zigLanguageClient.path": "zls",
    "[zig]": {
        "editor.defaultFormatter": "tiehuis.zig"
    },
    "zig.buildOnSave": true,
    // Force the onSave actions even if file unchanged
    // https://github.com/VSCodeVim/Vim/issues/1282#issuecomment-475832132
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [":", "w"],
            "commands": [
                "workbench.action.files.save",
            ]
        }
    ],
}
